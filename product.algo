    i:INTEGER
    p:FLOAT

    BEGIN
    FOR i FROM 0 TO 2 STEP 1  DO
        whrite("donner l'element",i+1,"de la vecteur v")
        read(v(i))
        whrite("donner l'element",i+1,"de la vvecteur u")
        read(u(i))
    END_FOR
    p=0
    FOR i FROM 0 TO 2 STEP 1 DO
    p=p+v(i)*u(i)
    END_IF

    RETURN P ;
END

